# Auto detect text files and perform LF normalization
* text=auto
# Python files
*.py text eol=lf
*.pyx text eol=lf
*.pxd text eol=lf
# Jupyter notebooks - strip outputs automatically
*.ipynb filter=nbstripout
*.ipynb diff=jupyternotebook
*.ipynb merge=jupyternotebook
# Shell scripts
*.sh text eol=lf
*.bash text eol=lf
# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf
# Documentation
*.md text eol=lf
*.txt text eol=lf
*.rst text eol=lf
# Configuration files
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
# Data files (mark as binary to avoid corruption)
*.npy binary
*.npz binary
*.pkl binary
*.pickle binary
*.h5 binary
*.hdf5 binary
*.csv binary
*.parquet binary
# Model files
*.pt binary
*.pth binary
*.ckpt binary
*.pb binary
*.onnx binary
# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text
# Archives
*.zip binary
*.tar binary
*.gz binary
*.bz2 binary
*.7z binary
# PDFs
*.pdf binary
figures/**/*.html filter=lfs diff=lfs merge=lfs -text
notebooks/End_to_end_Evaluation.ipynb filter=lfs diff=lfs merge=lfs -text
